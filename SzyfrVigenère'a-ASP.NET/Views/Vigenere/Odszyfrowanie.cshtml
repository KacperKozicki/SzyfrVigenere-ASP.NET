@model Vigenere

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-3">Szyfrowanie</h1>

            <form asp-controller="Vigenere" asp-action="Odszyfrowanie" method="post">
                <div class="form-group">
                    <label asp-for="Tekst">Tekst do odszyfrowania:</label>
                    <input asp-for="Tekst" class="form-control" />
                    <span asp-validation-for="Tekst" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klucz">Klucz szyfrujący:</label>
                    <input asp-for="Klucz" class="form-control" />
                    <span asp-validation-for="Klucz" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Odszyfruj</button>
            </form>

            <div class="mt-3">
                <label>Zaszyfrowany tekst:</label>
                <input asp-for="ZaszyfrowanyTekst" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>
